<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    android:layout_centerInParent="true"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Team"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/lightgray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/addhodCardView"
                    android:layout_width="@dimen/card_view_width"
                    android:layout_height="@dimen/card_view_height"
                    android:layout_margin="10dp"
                    android:background="@color/cardbackgroundcolor"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:scaleType="fitXY"
                            android:padding="10dp"
                            android:src="@mipmap/neeraj" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Neeraj Singh Rautela"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Android developer"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/card_second_text" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView

                    android:layout_width="@dimen/card_view_width"
                    android:layout_height="@dimen/card_view_height"
                    android:layout_margin="10dp"
                    android:background="@color/cardbackgroundcolor"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:scaleType="fitXY"
                            android:padding="10dp"
                            android:src="@mipmap/ankitverma" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Ankit Verma"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Android developer"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/card_second_text" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/addfacultyCardView"
                    android:layout_width="@dimen/card_view_width"
                    android:layout_height="@dimen/card_view_height"
                    android:layout_margin="10dp"
                    android:background="@color/cardbackgroundcolor"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"

                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:scaleType="fitXY"
                            android:padding="10dp"
                            android:src="@mipmap/bahu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Ankit Bhuguna"

                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Android developer"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/card_second_text" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/addcollegestaffCardView"
                    android:layout_width="@dimen/card_view_width"
                    android:layout_height="@dimen/card_view_height"
                    android:layout_margin="10dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/cardbackgroundcolor"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:scaleType="fitXY"
                            android:padding="10dp"
                            android:src="@mipmap/ankitbisht" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Ankit Bisht"

                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="UI designer"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/card_second_text" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/addstudentCardView"
                    android:layout_width="@dimen/card_view_width"
                    android:layout_height="@dimen/card_view_height"
                    android:layout_margin="10dp"
                    android:background="@color/cardbackgroundcolor"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"

                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:scaleType="fitXY"
                            android:padding="10dp"
                            android:src="@mipmap/vishu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Vishu Saini"

                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="UI designer"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/card_second_text" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>


