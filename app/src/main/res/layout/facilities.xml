<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@color/colorAccent"
                android:padding="20dp"
                android:text="Facilities"
                android:textColor="@color/backgroundcolor"
                android:textSize="22dp"
                android:textStyle="bold"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"

                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/hostelIB"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="2dp"

                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/hostel" />

                        <TextView
                            android:id="@+id/hostelTV"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:text=" Hostel"
                            android:textColor="@color/backgroundcolor"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"

                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/campusIB"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="2dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/campus" />

                        <TextView
                            android:id="@+id/campusTV"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:text="Campus"
                            android:textColor="@color/backgroundcolor"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/libararyIB"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="2dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/library" />

                        <TextView
                            android:id="@+id/libararyTV"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:text="Libarary"
                            android:textColor="@color/backgroundcolor"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"

                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sportIB"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="2dp"
                            android:scaleType="fitXY"
                            android:background="@android:color/transparent"
                            android:src="@drawable/sports" />

                        <TextView
                            android:id="@+id/sportTV"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:text="Sports"
                            android:textColor="@color/backgroundcolor"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>